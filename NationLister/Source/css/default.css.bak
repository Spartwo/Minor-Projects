header, nav,main,footer,figure,section,aside{ display: block;}
/********************************************************************************/		
/*  styles for all pages*/
/********************************************************************************/
body{ 
	background-color: #6AC1F3;
	color: white;	
	font-family: Helvetica;
	width: 100%;
	margin-right: auto;
    margin-left: auto;
}

header{
	background-color: #3A98D5; /*#171A21 dark*/
	color: white;	
	font-family: Helvetica;
	text-align: center;
	width: 100%;
	text-align: left;
    	position: fixed;
    	top: -1px;
    z-index: 5000;
}


/* horizonal coloured header bars */
.breakHeader {
	background-color: white; 
	color: black; 
	position:relative;  
	text-align: center; 
	padding: 20px;"
}

nav{ 
	background-color: white;
	color: black;	
	font-family: Helvetica;
	font-size: 18px;
	text-align: right;
	width: 100%;
	height: 55px;
    	position: absolute;
    	top: 170px;
}

a {
	text-decoration: none;
	color: #444;
}

	
main{ 
	background-color: #1B2837;
	color: white;
	font-family: Arial;
  	Border-Radius:15px;
} 

section{ 
	background-color: #1B2837;
	color: white;
	font-family: Arial;
}
 
article{ 
	background-color: #FFFFFF;
	font-family: Arial;
	color: #1B2837;
	margin-top: 196px;
}

p {
	font-family: Arial;
	font-weight: 100;
	color: #1B2837;
	font-size: 15px;
	text-align: left;
	letter-spacing: 1px;
	line-height:1.6;
  	margin-left: 15px;
	text-indent: 0%;
	text-shadow: #303030 0px 0px;
	
}

footer{ 
	background-color: #3A98D5;
	font-family: Arial;
	color: white;
	Padding-top: 15px;
	Padding-bottom: 35px;
   margin-bottom:-190px;
}
footer p {
	color: #FFFFFF;
}
footer a { color: #fafafa; }
footer a:hover {color: #1B2837;}


/* Dropdown Button */
.dropbtn {
  background-color: white;
  color: black;
  width: 113px;
  padding: 16px;
  padding-right: 47px;
  margin-right: -6px;
  margin-top: -18px;
  font-size: 18px;
  border: none;
  cursor: pointer;
}

/* Dropdown button on hover & focus */
.dropbtn:hover, .dropbtn:focus {
background-color: #2980B9;
}

/* The container <div> - needed to position the dropdown content */
.dropdown {
  position: relative;
  display: inline-block;
}

/* Show the dropdown menu (use JS to add this class to the .dropdown-content container when the user clicks on the dropdown button) */
.show {display:block;}

#myProgress {
  width: 100%;
  background-color: #ddd;
    border: 1px solid #ccc;
}

#myBar {
  width: 1%;
  height: 30px;
  background-color: #2B80B6;
    border: 1px solid #ccc;
}


/* search inputs */

input[type=textSub], select {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  font-size: 15px;
  font: Helvetica;
}


input[type=button] {
  width: 48%;
  background-color: #1B2837;
  color: white;
  padding: 14px 20px;
  margin-left: 1%;
  margin-right: 1%;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  align: center;
}

input[type=Reset] {
  width: 48%;
  background-color: #1B2837;
  color: white;
  padding: 14px 20px;
  margin-left: 1%;
  margin-right: 1%;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  text-align: center;
}

input[type=button]:hover {
  background-color: #aaaaaa;
  text-align: center;
}
input[type=Reset]:hover {
  background-color: #aaaaaa;
  text-align: center;
}


